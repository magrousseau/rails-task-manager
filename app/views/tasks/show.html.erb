<h1> <%= @task.title %> </h1>

<p> <%= @task.details %> </p>

<div>
    <% if @task.completed %>
      <i class="far fa-check-square">This task is completed</i>
    <% else %>
      <i class="far fa-square">This task is not completed yet</i>
    <% end %>
  </div>

  <%= link_to "<- back to list", tasks_path %>
<%= link_to "edit" , edit_task_path(@task)  %>

