<h1>My tasks</h1>
<% @tasks.each do |task| %>
  <div>
    <% if task.completed %>
      <i class="far fa-check-square"></i>
    <% else %>
      <i class="far fa-square"></i>
    <% end %>
    <%= link_to task.title, task_path(task) %>
    <%= link_to 'delete', task_path(task), method: :delete, data: { confirm: "Are you sure?" } %>
  </div>
<% end %>

<%= link_to "+ add a new task", tasks_new_path %>
